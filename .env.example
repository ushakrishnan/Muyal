# ===================================================================
# Muyal AI Agent - Multi-LLM Configuration
# ===================================================================
# This file contains ALL configuration for:
# - Microsoft 365 Integration (Teams, Copilot, Playground)
# - Web Interface (Custom chat and API)
# - Multi-LLM AI Providers (OpenAI, Anthropic, Azure OpenAI, Google AI, Azure AI Foundry, Ollama)
# ===================================================================

# =============================================================================
# AI PROVIDER CONFIGURATIONS
# Configure one or more providers. At least one is required.
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000
OPENAI_TOP_P=1
OPENAI_FREQUENCY_PENALTY=0
OPENAI_PRESENCE_PENALTY=0

# Anthropic (Claude) Configuration
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=1000
ANTHROPIC_TOP_P=1
ANTHROPIC_TOP_K=40

# Azure OpenAI Configuration (EXISTING - KEEP YOUR VALUES)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_TEMPERATURE=0.7
AZURE_OPENAI_MAX_TOKENS=1000
AZURE_OPENAI_TOP_P=1
AZURE_OPENAI_FREQUENCY_PENALTY=0
AZURE_OPENAI_PRESENCE_PENALTY=0

# Google AI (Gemini) Configuration
GOOGLE_AI_API_KEY=
GOOGLE_AI_MODEL=gemini-pro
GOOGLE_AI_TEMPERATURE=0.7
GOOGLE_AI_MAX_TOKENS=1000
GOOGLE_AI_TOP_P=0.8
GOOGLE_AI_TOP_K=40

# Azure AI Foundry Configuration
# For hosted models
AZURE_AI_FOUNDRY_ENDPOINT=
AZURE_AI_FOUNDRY_API_KEY=
AZURE_AI_FOUNDRY_MODEL_NAME=Llama-2-7b-chat-hf
AZURE_AI_FOUNDRY_DEPLOYMENT_NAME=
AZURE_AI_FOUNDRY_API_VERSION=2024-05-01-preview
AZURE_AI_FOUNDRY_TEMPERATURE=0.7
AZURE_AI_FOUNDRY_MAX_TOKENS=1000
AZURE_AI_FOUNDRY_TOP_P=1
# For local Azure AI Foundry
AZURE_AI_FOUNDRY_LOCAL=false
AZURE_AI_FOUNDRY_LOCAL_PORT=8080

# Ollama Configuration (Local AI)
OLLAMA_ENABLED=false
OLLAMA_ENDPOINT=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=1000
OLLAMA_TOP_P=0.9
OLLAMA_TOP_K=40
OLLAMA_KEEP_ALIVE=5m

# =============================================================================
# PLATFORM-SPECIFIC PROVIDER MAPPINGS
# Configure which AI provider to use for each platform
# =============================================================================

# Microsoft 365 / Teams - Using existing Azure OpenAI by default
M365_AI_PROVIDER=azure-openai-default
M365_AI_FALLBACK_PROVIDER=

# Web Interface
WEB_AI_PROVIDER=azure-openai-default
WEB_AI_FALLBACK_PROVIDER=

# Slack
SLACK_AI_PROVIDER=azure-openai-default
SLACK_AI_FALLBACK_PROVIDER=

# Discord
DISCORD_AI_PROVIDER=
DISCORD_AI_FALLBACK_PROVIDER=

# WhatsApp
WHATSAPP_AI_PROVIDER=
WHATSAPP_AI_FALLBACK_PROVIDER=

# SMS
SMS_AI_PROVIDER=
SMS_AI_FALLBACK_PROVIDER=

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3978
NODE_ENV=development
DEBUG_MODE=false
VERBOSE_LOGGING=false

# =============================================================================
# MICROSOFT 365 INTEGRATION
# =============================================================================
TEAMSFX_ENV=playground
TEAMSAPPTESTER_PORT=56150
TEAMSFX_NOTIFICATION_STORE_FILENAME=.notification.store.json

# Microsoft 365 App Registration (auto-generated during provision)
MicrosoftAppType=MultiTenant
MicrosoftAppId=
MicrosoftAppPassword=
MicrosoftAppTenantId=
BOT_ID=
TEAMS_APP_ID=
BOT_DOMAIN=
BOT_ENDPOINT=
clientId=
clientSecret=

# =============================================================================
# WEB INTERFACE CONFIGURATION
# =============================================================================
WEB_CHAT_TITLE=Muyal AI Agent
WEB_CHAT_THEME=default
API_RATE_LIMIT=100
MAX_CONVERSATION_HISTORY=50

# =============================================================================
# OBSERVABILITY & MONITORING
# =============================================================================

# Weights & Biases (https://wandb.ai) - Free tier available
# Sign up at wandb.ai and get your API key from wandb.ai/authorize
WANDB_ENABLED=false
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=muyal-ai-agent
WANDB_ENTITY=your_wandb_entity_name
WANDB_TAGS=production,multi-llm,ai-monitoring
WANDB_NOTES=Multi-provider AI agent monitoring

# =============================================================================
# MCP & A2A CONFIGURATION
# =============================================================================

# Enable MCP (Model Context Protocol) server
MCP_ENABLED=true
MCP_PORT=3979

# Enable A2A (Agent-to-Agent) communication
A2A_ENABLED=true
A2A_DISCOVERY_PORT=3980

# Agent identification
AGENT_ID=muyal-cea
AGENT_NAME="Muyal CEA"
AGENT_VERSION=1.0.0

# External agent endpoints (optional)
# CALENDAR_AGENT_ENDPOINT=http://localhost:4000
# EMAIL_AGENT_ENDPOINT=http://localhost:4001

# A2A network settings
A2A_NETWORK_TIMEOUT=30000
A2A_HEARTBEAT_INTERVAL=60000
A2A_MAX_RETRIES=3

# Conversation Memory Provider (filesystem | cosmos)
MEMORY_PROVIDER=filesystem
CONVERSATION_STORAGE_DIR=./data/conversations
MEMORY_MAX_MESSAGES=100
MEMORY_MAX_AGE_DAYS=30

# Logical memory: how many prior assistant answers are kept in conversation context (used for continuations)
# Default: 2 (can be increased to keep more assistant answers in logical memory)
LOGICAL_MEMORY_ANSWER_COUNT=10

# Number of recent messages sent to the model as chat history (affects tokens/cost)
MODEL_HISTORY_WINDOW=4

# Cosmos DB settings (optional) - used when MEMORY_PROVIDER=cosmos
COSMOS_DB_ENDPOINT=
COSMOS_DB_KEY=
COSMOS_DB_DATABASE=muyal_memory
COSMOS_DB_CONTAINER=conversations

