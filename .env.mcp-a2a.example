# MCP and A2A Configuration for Muyal CEA

# Enable MCP server
MCP_ENABLED=true
MCP_PORT=3979

# Enable A2A communication
A2A_ENABLED=true
A2A_DISCOVERY_PORT=3980

# Agent identification
AGENT_ID=muyal-cea
AGENT_NAME="Muyal CEA"
AGENT_VERSION=1.0.0

# External agent endpoints (optional)
# CALENDAR_AGENT_ENDPOINT=http://localhost:4000
# EMAIL_AGENT_ENDPOINT=http://localhost:4001
# SLACK_AGENT_ENDPOINT=http://localhost:4002

# MCP client connections (for connecting to other MCP servers)
# EXTERNAL_MCP_SERVERS=calendar-mcp://localhost:5000,email-mcp://localhost:5001

# A2A network settings
A2A_NETWORK_TIMEOUT=30000
A2A_HEARTBEAT_INTERVAL=60000
A2A_MAX_RETRIES=3